#!/usr/bin/env bash

# Run this from the top level directory

set -e

test $# -eq 1 || (echo "Usage: setlang LANG"; exit 1)
lang=$1
date=$(bin/datestr $lang)

perl -pni -e "s/define LANG .*/define LANG \"$lang\"/" config.inc
perl -pni -e "s/define kBuildDate .*/define kBuildDate \"$date\"/" config.inc

echo Set lang to: $lang
echo Set date to: $(echo "$date" | bin/transcode.pl from $lang)
